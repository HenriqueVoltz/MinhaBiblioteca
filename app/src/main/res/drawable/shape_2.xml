<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Cor de fundo do elemento -->
    <solid android:color="#dcbeaf" /> <!-- Exemplo: Branco -->

    <!-- Arredondamento dos cantos -->
    <corners android:radius="16dp" /> <!-- Exemplo: 16dp -->

    <!-- Borda (cor e espessura) -->
    <stroke
        android:width="2dp"
        android:color="#796c64" /> <!-- Exemplo: Cinza claro -->

    <!-- (Opcional) Margem interna -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>