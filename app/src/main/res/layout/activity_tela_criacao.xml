<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tela_criacao"> <!-- Ajuste para sua Activity: .MainActivity ou .Tela_criacao -->

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="Voltar"
        android:rotation="180"
        android:scaleType="fitCenter"
        android:src="@drawable/seta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true"> <!-- Importante para que o LinearLayout dentro possa usar match_parent na altura se necessário -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="24dp">

            <!-- FrameLayout para o Título -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_5"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="12dp"
                    android:text="ADICIONAR LIVRO"
                    android:textColor="#b77d68"
                    android:textSize="28dp"
                    android:textStyle="bold" />
            </FrameLayout>

            <!-- FrameLayout para o Formulário -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_2"
                android:padding="16dp">

                <!-- Os elementos internos do formulário (TextViews, EditTexts, etc.) -->
                <!-- É altamente recomendado refatorar isso para usar LinearLayouts internos -->
                <!-- ou ConstraintLayout para melhor posicionamento e responsividade -->
                <!-- do que margens fixas dentro do FrameLayout. -->
                <!-- Por ora, vou manter sua estrutura interna, mas com avisos. -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:text="TÍTULO:" />

                <EditText
                    android:id="@+id/txt_titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/shape_3"
                    android:inputType="textPersonName" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="56dp"
                    android:text="AUTOR:" />

                <EditText
                    android:id="@+id/txt_autor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="56dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/shape_3"
                    android:inputType="textPersonName" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="100dp"
                    android:text="GÊNERO:" />

                <Spinner
                    android:id="@+id/slect_genero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/shape_3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="144dp"
                    android:text="QUANTIDADE DE PÁGINAS:" />

                <EditText
                    android:id="@+id/txt_pag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="144dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/shape_3"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="188dp"
                    android:text="STATUS:" />

                <!-- É MELHOR USAR UM RadioGroup AQUI -->
                <RadioGroup
                    android:id="@+id/radio_group_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="210dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp">

                    <RadioButton
                        android:id="@+id/btn_jali"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JÁ LI"
                        android:textSize="11dp"/>

                    <RadioButton
                        android:id="@+id/btn_wishlist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="LISTA DE DESEJOS"
                        android:textSize="11dp" />

                    <RadioButton
                        android:id="@+id/btn_lendo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="LENDO"
                        android:textSize="11dp" />
                </RadioGroup>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="260dp"
                    android:text="ANOTAÇÕES:" />

                <EditText
                    android:id="@+id/txt_anotacoes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="3"
                    android:maxLines="5"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="282dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="60dp"
                    android:background="@drawable/shape_3"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"/>

                <Button
                    android:id="@+id/btn_adicionar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="380dp"
                    android:backgroundTint="@color/minha_cor_marrom"
                    android:text="ADICIONAR" />

            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
