<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tela_edicao">

    <!-- Cabeçalho: Apenas a Seta de Voltar -->

    <!-- Linha Divisória Opcional -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="37dp"
        android:layout_height="41dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Voltar"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:padding="8dp"
        android:rotation="180"
        android:scaleType="fitCenter"
        android:src="@drawable/seta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider_header_edicao"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/scrollViewEdicao"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/divider_header_edicao"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="8dp">

            <!-- Seção de Detalhes do Livro -->
            <LinearLayout
                android:id="@+id/container_detalhes_livro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/shape_4"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/txt_titulo_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    tools:text="Nome Incrívelmente Longo de Um Livro Que Ocupa Muito Espaço"
                    android:text="Título do Livro"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/txt_autor_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Autor(a): Nome do Autor"
                    android:text="Autor(a): -------"
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/txt_genero_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Gênero: Ficção Científica"
                    android:text="Gênero: -------"
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/txt_pag_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Páginas: 345"
                    android:text="Páginas: -------"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- Seção de Edição -->
            <LinearLayout
                android:id="@+id/container_edicao_campos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/shape_2"
                android:padding="16dp">

                <TextView
                    android:id="@+id/label_status_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <RadioGroup
                    android:id="@+id/radio_group_status_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/btn_jali_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="JÁ LI"
                        android:textSize="12sp"/>

                    <RadioButton
                        android:id="@+id/btn_wishlist_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="LISTA DE DESEJOS"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/btn_lendo_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="LENDO"
                        android:textSize="12sp" />
                </RadioGroup>

                <TextView
                    android:id="@+id/label_anotacoes_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ANOTAÇÕES:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/txt_anotacoes_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="5"
                    android:maxLines="10"
                    android:background="@drawable/shape_3"
                    android:gravity="top|start"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"
                    android:padding="8dp"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <Button
                        android:id="@+id/btn_salvar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="160dp"
                        android:backgroundTint="@color/minha_cor_marrom"
                        android:text="SALVAR" />

                    <ImageButton
                        android:id="@+id/btn_excluir"
                        android:layout_width="61dp"
                        android:layout_height="66dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Excluir Livro"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:padding="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/lixeira_semfundo" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
